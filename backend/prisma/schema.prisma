generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL") 
}

model User {
  id           Int            @id @default(autoincrement())
  name         String
  email        String         @unique
  passwordHash String
  phone        String         @unique
  is_buyer     Boolean
  is_seller    Boolean
  document     UserDocument[]
}

model UserDocument {
  id     Int  @id @default(autoincrement())
  user   User @relation(fields: [userId], references: [id])
  userId Int
}

model Order {
  id              String      @id @default(uuid())
  buyer_id        String
  seller_id       String
  product_id      String
  quote_id        String
  logistics_id    String
  payment_id      String
  quantity        Int
  price          Float
  status         OrderStatus @default(PENDING)
  shiping_address Json
  billing_address Json
  created_at     DateTime    @default(now())
  updated_at     DateTime    @updatedAt

  @@map("orders")
}

enum OrderStatus {
  PENDING
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
}
